<Page x:Class="ebay_api_inventory.Main.Pages.Dashboard.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Label Content="Dashboard" 
               HorizontalAlignment="Left" 
               FontWeight="Bold" 
               Margin="10,10,0,0"
               Grid.Row="0"
               FontSize="20"/>
        <ListView 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            Grid.Row="1"
            ItemsSource="{Binding listings}">
            <ListView.View>
                <GridView x:Name="ListingGridView">
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=itemId}" 
                                Header="Item ID" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=title}" 
                                Header="Title" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=availableQuantity}" 
                                Header="Available Stock" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=quantity}" 
                                Header="Total Stock" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=buyItNowPrice}" 
                                Header="Buy It Now Price" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=currencyType}" 
                                Header="Currency" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=listingType}" 
                                Header="Listing Type" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=startTime}" 
                                Header="StartTime" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=storageLocation}"
                                    Header="Storage Location" Width="Auto" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
