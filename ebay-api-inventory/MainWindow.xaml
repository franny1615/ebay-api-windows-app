<Window x:Class="ebay_api_inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ebay_api_inventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="10,0,10,0"/>
                </Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="Log In" HorizontalAlignment="Center"/>
            <Label Content="Username" />
            <TextBox HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top"/>
            <Label Content="Password" />
            <TextBox HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
            <Button Content="Log In"/>
        </StackPanel>
    </Grid>
</Window>
